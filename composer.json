{
    "name": "jippi/core",
    "description": "Jippi wordpress theme",
    "keywords": ["WordPress", "Theme"],
    "homepage": "https://jippi.co.id/",
    "license": "GPL-3.0",
    "version": "4.0.0",
    "authors": [
        {
            "name": "Kevinzie",
            "email": "jippi.id@gmail.com",
            "homepage": "https://jippi.co.id",
            "role": "Developer"
        }
    ],
    "require": {
        "vlucas/phpdotenv": "^5.2",
        "yahnis-elsts/plugin-update-checker": "*"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.0",
        "wp-coding-standards/wpcs": "^2.3"
    },
    "autoload": {
        "psr-4": { "JippiTheme\\": "./includes" },
        "files": [ "./includes/Helpers.php" ]
    },
    "scripts": {
        "test": ["@phpcs", "@parallel-lint"],
        "phpcs": "phpcs",
        "parallel-lint": "parallel-lint --blame --exclude vendor/ ."
    }
}
